<% if(post.post_type == 'Text') %>

  <%= render partial: 'text_posts/show', layout: 'layouts/blank', locals: { post: post } %>

<% elsif(post.post_type == 'Photo') %>

  <%= render partial: 'photo_posts/show', layout: 'layouts/blank', locals: { post: post } %>

<% elsif(post.post_type == 'Quote') %>

  <%= render partial: 'quote_posts/show', layout: 'layouts/blank', locals: { post: post } %>

<% elsif(post.post_type == 'Link') %>

  <%= render partial: 'link_posts/show', layout: 'layouts/blank', locals: { post: post } %>

<% elsif(post.post_type == 'Chat') %>

  <%= render partial: 'chat_posts/show', layout: 'layouts/blank', locals: { post: post } %>

<% elsif(post.post_type == 'Audio') %>

  <%= render partial: 'audio_posts/show', layout: 'layouts/blank', locals: { post: post } %>

<% elsif post.post_type == 'Video' %>

  <%= render partial: 'video_posts/show', layout: 'layouts/blank', locals: { post: post } %>

<% end %>
